.container.login
  img(width="120px", height="120px", src='assets/images/colorbox.png', alt='欢迎来到colorbox')
  a(href="/")
    h4 colorbox
  h3 登录
  form.form(name='form', ng-submit='login(form)', novalidate='')
    .login__form
      input.form-control.login__first(auto-focus="first", type='email', name='email', ng-model='user.email', required='', placeholder="邮箱")
      input.form-control.login__last(type='password', name='password', ng-model='user.password', required='', placeholder="密码")

    .form-group.has-error.text-left
      p.help-block(ng-show='form.email.$error.email && submitted')
        | 请输入正确的邮箱
      p.help-block(ng-show='form.email.$error.required && submitted')
        | 请输入邮箱
      p.help-block(ng-show='form.password.$error.required && submitted')
        | 请输入密码
      p.help-block {{ errors.other }}

    button.btn.btn-primary.btn-block(type='submit') 登录
    h6.text-left 没有账号？
    a.btn.btn-default.btn-block(href='/signup') 注册
