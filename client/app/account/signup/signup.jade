.container.login
  img(width="120px", height="120px", src='assets/images/colorbox.png', alt='欢迎来到colorbox')
  a(href="/")
    h4 colorbox
  h3 注册
  form.form(name='form', ng-submit='register(form)', novalidate='')
    .login__form
      div(ng-class='{ "has-success": form.name.$valid && submitted,\
      "has-error": form.name.$invalid && submitted }')
        input.form-control.login__first(auto-focus="first", type='text', name='name', ng-model='user.name', required='', mongoose-error='', placeholder="名称")

      div(ng-class='{ "has-success": form.email.$valid && submitted,\
      "has-error": form.email.$invalid && submitted }')
        input.form-control(type='email', name='email', ng-model='user.email', required='', mongoose-error='', placeholder="邮箱")

      div(ng-class='{ "has-success": form.password.$valid && submitted,\
      "has-error": form.password.$invalid && submitted }')
        input.form-control.login__last(type='password', name='password', ng-model='user.password', ng-minlength='6', required='', mongoose-error='', placeholder="密码")
      .form-group.text-left(ng-class='{"has-error": form.$invalid && submitted }')
        p.help-block(ng-show='form.name.$error.required && submitted')
          | 请填写名称
        p.help-block(ng-show='form.name.$error.mongoose')
          | {{ errors.name }}
        p.help-block(ng-show='form.email.$error.email && submitted')
          | 无效邮箱
        p.help-block(ng-show='form.email.$error.required && submitted')
          | 请填写邮箱
        p.help-block(ng-show='form.email.$error.mongoose')
          | {{ errors.email }}
        p.help-block(ng-show='(form.password.$error.minlength || form.password.$error.required) && submitted')
          | 密码至少6个字符
        p.help-block(ng-show='form.password.$error.mongoose')
          | {{ errors.password }}
      button.btn.btn-primary.btn-block(type='submit') 注册
      h6.text-left 已有账号？
      a.btn.btn-default.btn-block(href='/login') 登录
