div(ng-include='"components/navbar/navbar.html"')
.panel.user__top(style="height: {{+settings.height >= 200 && +settings.height <= 600 ? +settings.height : 300}}px")
  iframe.user__back(ng-if="settings.code", width="100%", height="100%", frameborder="0", ng-src="{{settings.preview}}", seamless, scrolling="no")
  .user__head.container
    img.img-circle.pull-left.mrl(ng-src="http://identicon.relucks.org/{{ currentUser }}?size=128px", width="128px", height="128px")
    h3(style="color: {{settings.color}}") {{ currentUser }}
.user__nav
  .container
    div.btn-group.btn-group-sm
      a.btn.btn-default(ng-repeat="tab in tabs", ng-class="{'btn-primary': isActive(tab.name)}", href="/user/{{ currentUser }}/{{tab.name}}") {{tab.text}}
.user__container
  .container.mtl(ui-view="")
